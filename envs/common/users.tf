# Shared user configuration for all environments
# SSH public keys are not secrets - safe to store in git
# Password hashes should be passed via terraform.tfvars

locals {
  # SSH public keys by identifier
  ssh_keys = {
    "root@pve" = "ssh-rsa  root@pve"

    "jderose@studio" = "ssh-rsa  jderose@studio"

    "jderose@father" = "ssh-rsa  jderose@father"
  }

  # Convenience lists for common use cases
  root_ssh_keys   = [local.ssh_keys["root@pve"]]
  jderose_ssh_keys = [
    local.ssh_keys["jderose@studio"],
    local.ssh_keys["jderose@father"],
  ]
  all_ssh_keys = concat(local.root_ssh_keys, local.jderose_ssh_keys)
}

